{
  "name": "possibility",
  "version": "1.1.0",
  "description": "All things are possible to him who believes.",
  "private": true,
  "scripts": {
    "test": "jest --verbose",
    "test:js": "jest --verbose",
    "test:py": "python -m pytest tests/ -v",
    "test:all": "python -m pytest tests/ -v && jest --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "testMatch": ["<rootDir>/js_tests/**/*.test.{js,jsx}"],
    "moduleNameMapper": {
      "^lucide-react$": "<rootDir>/js_tests/__mocks__/lucide-react.js"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      ["@babel/preset-react", { "runtime": "automatic" }]
    ]
  }
}
